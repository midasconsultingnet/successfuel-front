  --foreground: oklch(22% 0.03 160);      /* Texte presque noir, léger biais vert */

  --card: oklch(100% 0 0);                /* Blanc pur */
  --card-foreground: oklch(22% 0.03 160);

  --popover: oklch(100% 0 0);
  --popover-foreground: oklch(22% 0.03 160);

  --primary: oklch(62% 0.20 142);         /* Vert du logo ≈ #10B981 */
  --primary-foreground: oklch(98% 0.01 0); /* Blanc cassé */

  --secondary: oklch(74% 0.23 60);        /* Jaune/orange du logo ≈ #F59E0B */
  --secondary-foreground: oklch(20% 0.03 160); /* Texte très foncé dessus */

  --muted: oklch(96% 0.03 140);           /* Très clair, teinte verte subtile */
  --muted-foreground: oklch(55% 0.06 150);

  --accent: oklch(92% 0.10 70);           /* Accent jaune-vert clair */
  --accent-foreground: oklch(25% 0.04 160);

  --destructive: oklch(58% 0.24 25);      /* Rouge-orangé énergique */
  --destructive-foreground: oklch(98% 0 0);

  --border: oklch(90% 0.06 140);          /* Bordure subtile verte */
  --input: oklch(90% 0.06 140);
  --ring: oklch(62% 0.20 142);            /* Focus ring = primary */

  /* Charts - palette énergie/success */
  --chart-1: oklch(62% 0.20 142);         /* Vert principal */
  --chart-2: oklch(74% 0.23 60);          /* Jaune fuel */
  --chart-3: oklch(68% 0.18 100);         /* Vert lime */
  --chart-4: oklch(70% 0.22 80);          /* Vert-jaune */
  --chart-5: oklch(55% 0.25 25);          /* Orange boost */

  /* Sidebar - propre et lisible */
  --sidebar: oklch(100% 0 0);
  --sidebar-foreground: oklch(22% 0.03 160);
  --sidebar-primary: oklch(62% 0.20 142);
  --sidebar-primary-foreground: oklch(98% 0 0);
  --sidebar-accent: oklch(92% 0.10 70);
  --sidebar-accent-foreground: oklch(22% 0.03 160);
  --sidebar-border: oklch(88% 0.07 140);
  --sidebar-ring: oklch(62% 0.20 142);
}

.theme-successfuel.dark {
  /* DARK MODE - Cohérent avec ton .theme-sky.dark */
  --background: oklch(20% 0.04 160);      /* Gris-vert très foncé */
  --foreground: oklch(94% 0.03 140);      /* Texte clair avec teinte verte */

  --card: oklch(24% 0.05 160);
  --card-foreground: oklch(94% 0.03 140);

  --popover: oklch(24% 0.05 160);
  --popover-foreground: oklch(94% 0.03 140);

  --primary: oklch(68% 0.19 142);         /* Vert plus lumineux en dark (pop!) */
  --primary-foreground: oklch(20% 0.04 160); /* Fond très foncé pour contraste */

  --secondary: oklch(72% 0.22 60);        /* Jaune qui ressort bien en dark */
  --secondary-foreground: oklch(20% 0.04 160);

  --muted: oklch(30% 0.05 150);
  --muted-foreground: oklch(75% 0.07 140);

  --accent: oklch(38% 0.12 80);           /* Accent plus saturé en dark */
  --accent-foreground: oklch(94% 0.03 140);

  --destructive: oklch(55% 0.26 25);
  --destructive-foreground: oklch(98% 0 0);

  --border: oklch(32% 0.06 150);
  --input: oklch(32% 0.06 150);
  --ring: oklch(68% 0.19 142);

  /* Charts - plus vibrants en dark */
  --chart-1: oklch(68% 0.19 142);         /* Vert pop */
  --chart-2: oklch(78% 0.24 60);          /* Jaune vif */
  --chart-3: oklch(75% 0.20 100);         /* Lime */
  --chart-4: oklch(76% 0.23 80);          /* Vert-jaune */
  --chart-5: oklch(65% 0.28 25);          /* Orange énergique */

  /* Sidebar dark */
  --sidebar: oklch(24% 0.05 160);
  --sidebar-foreground: oklch(94% 0.03 140);
  --sidebar-primary: oklch(68% 0.19 142);
  --sidebar-primary-foreground: oklch(20% 0.04 160);
  --sidebar-accent: oklch(38% 0.12 80);
  --sidebar-accent-foreground: oklch(94% 0.03 140);
  --sidebar-border: oklch(32% 0.06 150);
  --sidebar-ring: oklch(68% 0.19 142);
}

@theme inline {
  --radius-sm: calc(var(--radius) - 4px);
  --radius-md: calc(var(--radius) - 2px);
  --radius-lg: var(--radius);
  --radius-xl: calc(var(--radius) + 4px);
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --color-card: var(--card);
  --color-card-foreground: var(--card-foreground);
  --color-popover: var(--popover);
  --color-popover-foreground: var(--popover-foreground);
  --color-primary: var(--primary);
  --color-primary-foreground: var(--primary-foreground);
  --color-secondary: var(--secondary);
  --color-secondary-foreground: var(--secondary-foreground);
  --color-muted: var(--muted);
  --color-muted-foreground: var(--muted-foreground);
  --color-accent: var(--accent);
  --color-accent-foreground: var(--accent-foreground);
  --color-destructive: var(--destructive);
  --color-destructive-foreground: var(--destructive-foreground);
  --color-border: var(--border);
  --color-input: var(--input);
  --color-ring: var(--ring);
  --color-chart-1: var(--chart-1);
  --color-chart-2: var(--chart-2);
  --color-chart-3: var(--chart-3);
  --color-chart-4: var(--chart-4);
  --color-chart-5: var(--chart-5);
  --color-sidebar: var(--sidebar);
  --color-sidebar-foreground: var(--sidebar-foreground);
  --color-sidebar-primary: var(--sidebar-primary);
  --color-sidebar-primary-foreground: var(--sidebar-primary-foreground);
  --color-sidebar-accent: var(--sidebar-accent);
  --color-sidebar-accent-foreground: var(--sidebar-accent-foreground);
  --color-sidebar-border: var(--sidebar-border);
  --color-sidebar-ring: var(--sidebar-ring);
}

@layer base {
  * {
    @apply border-border outline-ring/50;
  }
  body {
    @apply bg-background text-foreground;
  }
}