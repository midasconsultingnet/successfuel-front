  function getUnlinkedTreasuries(): TreasuryConfig[] {
    const linkedTreasuryIds = new Set(treasuries.map(t => t.id).filter(Boolean));
    return allTreasuries.filter(t => !linkedTreasuryIds.has(t.id || ''));
  }

  // Fonction pour grouper les m√©thodes de paiement par tr√©sorerie
  function groupPaymentMethodsByTreasury(): Record<string, PaymentMethodConfig[]> {
    const grouped: Record<string, PaymentMethodConfig[]> = {};

    for (const treasury of treasuries) {
      if (treasury.id) {
        grouped[treasury.id] = [];
      }
    }

    for (const method of paymentMethods) {
      if (method.treasury_id && grouped[method.treasury_id]) {
        grouped[method.treasury_id].push(method);
      }
    }

    return grouped;
  }

  // Fonction pour ajouter un solde initial
  async function addTreasuryBalance() {
    try {
      if (!balanceTreasuryIdValue || balanceInitialAmount < 0) {
        throw new Error('La tr√©sorerie et le montant du solde sont requis');
      }

      // Mettre √† jour la propri√©t√© avec la valeur du select
      balanceTreasuryId = balanceTreasuryIdValue;

      // R√©cup√©rer les associations tr√©sorerie-station pour la station
      const treasuryStationAssociations = await treasuryService.getTreasuryStationAssociations(stationId);

      // Trouver l'association sp√©cifique pour cette tr√©sorerie
      const treasuryAssociation = treasuryStationAssociations.find(assoc => assoc.tr√©sorerie_id === balanceTreasuryId);

      if (!treasuryAssociation) {
        throw new Error('Impossible de trouver l\'association tr√©sorerie-station correspondante');
      }

      // Cr√©er l'√©tat initial via l'API
      // Pour l'instant, on utilise un ID utilisateur factice, √† remplacer par l'ID r√©el de l'utilisateur authentifi√©
      const currentUserId = '00000000-0000-0000-0000-000000000000'; // Remplacer par le vrai ID utilisateur

      const initialStateData = {
        tresorerie_station_id: treasuryAssociation.id, // Utiliser l'ID de l'association tr√©sorerie-station
        date_enregistrement: new Date().toISOString(),
        montant: balanceInitialAmount,
        commentaire: null, // Optionnel
        enregistre_par: currentUserId // ID de l'utilisateur connect√©
      };

      const newInitialStateFromApi = await treasuryInitialStateService.createInitialState(initialStateData);

      // Cr√©er l'objet du nouveau solde
      const newBalance: TreasuryInitialBalanceConfig = {
        id: newInitialStateFromApi.id,
        treasury_id: balanceTreasuryId,
        initial_balance: balanceInitialAmount
      };

      // Mettre √† jour la liste des soldes initiaux
      treasuryBalances = [...treasuryBalances, newBalance];

      // Mettre √† jour aussi l'objet tr√©sorerie dans la liste des tr√©soreries pour refl√©ter le nouveau solde initial
      treasuries = treasuries.map(t =>
        t.id === balanceTreasuryId
          ? { ...t, initial_balance: balanceInitialAmount }
          : t
      );

      // R√©initialiser le formulaire
      showAddBalanceDialog = false;
      balanceTreasuryId = '';
      balanceTreasuryIdValue = '';
      balanceInitialAmount = 0;

      console.log('Solde initial ajout√© avec succ√®s:', newBalance);
    } catch (err) {
      console.error('Erreur lors de l\'ajout du solde initial:', err);
      error = 'Impossible d\'ajouter le solde initial: ' + (err as Error).message;
    }
  }

  // Fonction pour modifier un solde initial
  async function updateTreasuryBalance() {
    try {
      if (!editingBalance || !editingBalance.id) {
        throw new Error('Aucun solde √† √©diter');
      }

      // Pour la mise √† jour, nous devons d'abord r√©cup√©rer l'association tr√©sorerie-station
      const treasuryStationAssociations = await treasuryService.getTreasuryStationAssociations(stationId);
      const treasuryAssociation = treasuryStationAssociations.find(assoc => assoc.tr√©sorerie_id === editingBalanceTreasuryIdValue);

      if (!treasuryAssociation) {
        throw new Error('Impossible de trouver l\'association tr√©sorerie-station correspondante');
      }

      // Mettre √† jour l'√©tat initial via l'API
      const updateData = {
        date_enregistrement: new Date().toISOString(),
        montant: editingBalance.initial_balance || 0,
        commentaire: null, // Optionnel
        enregistre_par: '00000000-0000-0000-0000-000000000000' // Remplacer par le vrai ID utilisateur
      };

      const updatedInitialStateFromApi = await treasuryInitialStateService.updateInitialState(editingBalance.id, updateData);

      // Mettre √† jour le solde dans la liste
      const updatedId = editingBalance.id;
      const updatedTreasuryId = editingBalanceTreasuryIdValue;
      const updatedBalance = {
        id: updatedInitialStateFromApi.id,
        treasury_id: updatedTreasuryId,
        initial_balance: editingBalance.initial_balance || 0
      };

      treasuryBalances = treasuryBalances.map(b =>
        b.id === updatedId
          ? updatedBalance
          : b
      );

      // Mettre √† jour aussi l'objet tr√©sorerie dans la liste des tr√©soreries pour refl√©ter le nouveau solde initial
      treasuries = treasuries.map(t =>
        t.id === updatedTreasuryId
          ? { ...t, initial_balance: editingBalance.initial_balance || 0 }
          : t
      );

      // Fermer la bo√Æte de dialogue
      showEditBalanceDialog = false;
      editingBalance = null;

      console.log('Solde initial mis √† jour avec succ√®s');
    } catch (err) {
      console.error('Erreur lors de la mise √† jour du solde initial:', err);
      error = 'Impossible de mettre √† jour le solde initial: ' + (err as Error).message;
    }
  }

  // Fonction pour supprimer un solde initial
  async function removeTreasuryBalance(balanceId: string) {
    try {
      // Supprimer l'√©tat initial via l'API
      await treasuryInitialStateService.deleteInitialState(balanceId);

      // Retirer du tableau des soldes initiaux
      treasuryBalances = treasuryBalances.filter(b => b.id !== balanceId);

      // Mettre √† jour la tr√©sorerie dans la liste des tr√©soreries pour refl√©ter le solde initial mis √† jour
      treasuries = treasuries.map(t =>
        t.id === editingBalance!.treasury_id
          ? { ...t, initial_balance: 0 } // Remise √† z√©ro du solde initial
          : t
      );

      console.log('Solde initial supprim√© avec succ√®s');
    } catch (err) {
      console.error('Erreur lors de la suppression du solde initial:', err);
      error = 'Impossible de supprimer le solde initial: ' + (err as Error).message;
    }
  }

  // Fonction pour pr√©parer l'√©dition d'un solde initial
  function prepareEditBalance(balance: TreasuryInitialBalanceConfig) {
    editingBalance = { ...balance };
    editingBalanceTreasuryIdValue = balance.treasury_id;
    showEditBalanceDialog = true;
  }

  // Fonction pour obtenir une tr√©sorerie par ID
  function getTreasuryById(id: string) {
    return treasuries.find(t => t.id === id);
  }

  console.log('Composant finances mont√©');
</script>

