          id: `balance-${t.tr√©sorerie_station_id || t.tresorerie_id || 'unknown'}-${index}`, // Utiliser l'ID d'association s'il existe, sinon utiliser 'unknown' avec index
          treasury_id: t.tresorerie_id,
