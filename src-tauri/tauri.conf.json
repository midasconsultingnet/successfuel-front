{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SuccessFuel",
  "version": "0.1.0",
  "identifier": "com.midas.successfuel",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "splashscreen",
        "url": "/",
        "title": "SuccessFuel v0.1.0 - by MIDAS-CONSULTING.NET",
        "center": true,
        "width": 800,
        "height": 600,
        "resizable": false,
        "transparent": true,
        "decorations": false
      },
      {
        "label": "main",
        "url": "/login",
        "title": "SuccessFuel - by MIDAS-CONSULTING.NET",
        "center": true,
        "width": 1200,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://successfuel-api.onrender.com; img-src 'self' https://* data:; style-src 'self' 'unsafe-inline'; script-src 'self'; font-src 'self' data:; object-src 'none'; frame-src 'none'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "MIDAS-CONSULTING.NET",
    "category": "Business",
    "copyright": "Copyright (c) 2025 MIDAS-CONSULTING.NET. All rights reserved.",
    "shortDescription": "Gestion d'entreprise de stations-services",
    "longDescription": "Application de gestion compl√®te pour les stations-services"
  },
  "plugins": {
    "http": {
      "scope": [
        "https://successfuel-api.onrender.com/*"
      ]
    },
    "fs": {
      "requireLiteralLeadingDot": false
    }
  }
}
